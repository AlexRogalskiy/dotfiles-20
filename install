#!/bin/bash
#
# Junegunn Choi (junegunn.c@gmail.com)
# 2011/05/25-

# RC files
cd `dirname $BASH_SOURCE`
touch bashrc-extra
for rc in *rc *profile tmux.conf; do
  mkdir -pv bak
  [ -e ~/.$rc ] && mv -v ~/.$rc bak/.$rc
  ln -sv $(cd $(dirname $rc); pwd)/$rc ~/.$rc
done

# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
  curl https://raw.github.com/git/git/master/contrib/completion/git-prompt.sh \
    -o ~/.git-prompt.sh
fi

# fzf
if [ ! -d ~/.fzf ]; then
  git clone https://github.com/junegunn/fzf.git ~/.fzf
else
  (cd ~/.fzf; git pull)
fi
yes | ~/.fzf/install

# Leiningen
# https://github.com/sattvik/lein-tarsier
mkdir -p ~/bin
wget https://raw.github.com/technomancy/leiningen/preview/bin/lein --no-check-certificate -O ~/bin/lein &&
chmod +x ~/bin/lein && ~/bin/lein version
[ -e ~/.lein/profiles.clj ] || echo '{:user {:plugins [[lein-tarsier "0.10.0"]]}}' > ~/.lein/profiles.clj

# tmux on OSX
# https://github.com/ChrisJohnsen/tmux-MacOSX-pasteboard
if [ `uname -s` = 'Darwin' ]; then
  ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go/install)"
  brew install reattach-to-user-namespace
else
  rm ~/.tmux.conf
  grep -v reattach-to-user-namespace tmux.conf > ~/.tmux.conf
fi

tmux source-file ~/.tmux.conf
