#!/bin/bash
#
# Junegunn Choi (junegunn.c@gmail.com)
# 2011/05/25-

# RC files
cd $(dirname $BASH_SOURCE)
BASE=$(pwd)
touch bashrc-extra
for rc in *rc *profile tmux.conf; do
  mkdir -pv bak
  [ -e ~/.$rc ] && mv -v ~/.$rc bak/.$rc
  ln -sv $BASE/$rc ~/.$rc
done

# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
  curl https://raw.github.com/git/git/master/contrib/completion/git-prompt.sh \
    -o ~/.git-prompt.sh
fi

# scripts
mkdir -p ~/bin
for bin in $BASE/bin/*; do
  ln -svf $bin ~/bin
done

if [ $(uname -s) = 'Darwin' ]; then
  # Homebrew
  [ -z "$(which brew)" ] &&
    ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go/install)"

  brew install \
    ag ant cmus coreutils cscope ctags \
    fish git gnuplot graphviz imagemagick leiningen libgit2 \
    macvim maven memcached mysql ranger reattach-to-user-namespace redis \
    rust sl tmux tree unrar vim wget zsh \
    scala sbt
else
  rm ~/.tmux.conf
  grep -v reattach-to-user-namespace tmux.conf > ~/.tmux.conf
fi

tmux source-file ~/.tmux.conf

# fzf
if [ -n "$(which git)" ]; then
  if [ ! -d ~/.fzf ]; then
    git clone https://github.com/junegunn/fzf.git ~/.fzf
  else
    (cd ~/.fzf; git pull origin master)
  fi
else
  mkdir -p ~/.fzf
  curl -L https://github.com/junegunn/fzf/archive/master.tar.gz |
      tar xz --strip-components 1 -C ~/.fzf
fi
yes | ~/.fzf/install

./install-vim
