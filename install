#!/bin/bash
#
# Junegunn Choi (junegunn.c@gmail.com)
# 2011/05/25-

# RC files
cd `dirname $BASH_SOURCE`
touch bashrc-extra
for rc in *rc *profile tmux.conf; do
  mkdir -pv bak
  [ -e ~/.$rc ] && mv -v ~/.$rc bak/.$rc
  ln -sv $(cd $(dirname $rc); pwd)/$rc ~/.$rc
done

# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
  curl -k -k https://raw.github.com/git/git/master/contrib/completion/git-prompt.sh \
    -o ~/.git-prompt.sh
fi

# fzf
if [ -n "$(which git)" ]; then
  if [ ! -d ~/.fzf ]; then
    git clone https://github.com/junegunn/fzf.git ~/.fzf
  else
    (cd ~/.fzf; git pull origin master)
  fi
else
  mkdir -p ~/.fzf
  curl -k -k -L https://github.com/junegunn/fzf/archive/master.tar.gz |
      tar xz --strip-components 1 -C ~/.fzf
fi
yes | ~/.fzf/install

# Leiningen
if [ ! -x ~/bin/lein ]; then
  mkdir -p ~/bin
  curl -k -k https://raw.githubusercontent.com/technomancy/leiningen/stable/bin/lein -o ~/bin/lein
  chmod +x ~/bin/lein
  ~/bin/lein version
fi

# tmux on OSX
# https://github.com/ChrisJohnsen/tmux-MacOSX-pasteboard
if [ `uname -s` = 'Darwin' ]; then
  [ -z "$(which brew)" ] &&
    ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go/install)"
  [ -z "$(which reattach-to-user-namespace)" ] &&
    brew install reattach-to-user-namespace
else
  rm ~/.tmux.conf
  grep -v reattach-to-user-namespace tmux.conf > ~/.tmux.conf
fi

tmux source-file ~/.tmux.conf

./install-vim
