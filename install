#!/bin/bash
#
# Junegunn Choi (junegunn.c@gmail.com)
# 2011/05/25-

# RC files
cd `dirname $BASH_SOURCE`
touch bashrc_extra
for rc in *rc tmux.conf; do
	mkdir -pv bak
	mv -v ~/.$rc bak/
	ln -sv $(cd $(dirname $rc); pwd)/$rc ~/.$rc
done

# Leiningen
# https://github.com/sattvik/lein-tarsier
mkdir -p ~/bin
wget https://raw.github.com/technomancy/leiningen/preview/bin/lein --no-check-certificate -O ~/bin/lein &&
chmod +x ~/bin/lein &&
~/bin/lein
[ -e ~/.lein/profiles.clj ] || echo '{:user {:plugins [[lein-tarsier "0.10.0"]]}}' > ~/.lein/profiles.clj

# tmux on OSX
# https://github.com/ChrisJohnsen/tmux-MacOSX-pasteboard
if [ `uname -s` = 'Darwin' ]; then
  ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go/install)"
  brew install reattach-to-user-namespace
else
  rm ~/.tmux.conf
  grep -v default-command tmux.conf > ~/.tmux.conf
fi

tmux source-file ~/.tmux.conf
